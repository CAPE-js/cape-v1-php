{
	"datasets": [
		{
			"id":"testenv",
			"title": "Test Environment",
			"base_file_name":"dataset1",
                        "format":"csv",
			"data_dir":"data",
			"sort": [ "title", "date" ],
			"result_mode" : "search",
			"license": {
				"url":"https://creativecommons.org/licenses/by/3.0/",
				"name":"Creative Commons Attribution 3.0 Unported (CC BY 3.0)"
			},
			"copyright": {
				"url":"https://www.southampton.ac.uk/",
				"name":"University of Southampton"
			},
			"creators": [{
				"name": "Marvin Fenderson",
				"email": "marvin@totl.net"
			}],
			"attribution": {
				"text": "TotL Project",
				"url": "http://example.org/totl/"
			},
			"extra_pages": [ "foo", "bar" ],
        		"id_field":"record_number",
			"fields":[
				{
					"id":"record_number",
					"type":"integer",
					"source_heading":"RECORD NUMBER",
					"label":"Record number label",
					"description":"Record number description"
				},
				{
					"id":"auto",
					"type":"integer",
					"source_heading":"AUTO",
					"label":"Auto label",
					"description":"Auto description"
				},
				{
					"id":"date",
					"type":"date",
					"source_heading":"DATE",
					"label":"Date label",
					"description":"Date description",
					"quick_search":true,
					"placeholder":{ "is": "is placeholder", "between": [ "between placeholder a", "between placeholder b" ] }
				},
				{
					"id":"title",
					"type":"text",
					"source_heading":"TITLE",
					"label":"Title label",
					"description":"Title description"
				},
				{
					"id":"size",
					"type":"enum",
					"style":{"one-of":"checkbox"},
                			"source_heading":"SIZE",
                			"label":"Size label",
                			"description":"Size description"
				},
				{
					"id":"colour",
					"type":"enum",
					"multiple":true,
                			"source_heading":"COLOUR",
                			"label":"Colour label",
                			"description":"Colour description"
				},
				{
					"id":"weight",
					"type":"integer",
                			"source_heading":"WEIGHT",
					"step": 5,
                			"label":"Weight label",
                			"description":"Weight description"
				},
				{
					"id":"likes",
					"type":"enum",
					"multiple":true,
                			"source_heading":["FOODS","DRINKS"],
					"source_split":"\\s*;\\s*",
                			"label":"Likes label",
                			"description":"Likes description"
				},
				{
					"id":"foods",
					"type":"enum",
					"multiple":true,
                			"source_heading":"FOODS",
					"source_split":"\\s*;\\s*",
                			"label":"Foods label",
					"quick_search":true,
					"change_filter_mode":false,
                			"description":"Foods description"
				},
				{
					"id":"drinks",
					"type":"enum",
					"multiple":true,
                			"source_heading":"DRINKS",
					"source_split":"\\s*;\\s*",
                			"label":"Drinks label",
					"quick_search":true,
					"default_filter_mode":"is",
                			"description":"Drinks description"
				},
				{
					"id":"colour3",
					"type":"enum",
					"multiple":true,
                			"source_heading":"COLOUR",
                			"source_chars":3,
                			"label":"3 char Colour label",
                			"description":"Colour trimmed to 3 characters"
				},
				{
					"id":"junk",
					"type":"ignore",
                			"source_heading":"JUNK"
				}
			]
		}
	]
}
